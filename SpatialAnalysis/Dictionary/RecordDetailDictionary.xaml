<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- 标题 -->
    <Style x:Key="title" TargetType="TextBlock">
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Bottom"/>
        <Setter Property="Margin" Value="10,0,0,8"/>
        <Setter Property="FontSize" Value="16"/>
    </Style>
    <!-- 分割线 -->
    <Style x:Key="title-line" TargetType="Border">
        <Setter Property="Margin" Value="10,0,10,0"/>
        <Setter Property="Background" Value="#63B8FF"/>
    </Style>
    <!-- 详细信息 外框 -->
    <Style x:Key="detail-border" TargetType="Border">
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="VerticalAlignment" Value="Bottom"/>
        <Setter Property="Margin" Value="0,0,10,8"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#63B8FF"/>
    </Style>
    <!-- 详细信息 三角形 -->
    <Style x:Key="detail-triangle" TargetType="Path">
        <Setter Property="Fill" Value="Gray"/>
        <Setter Property="Stretch" Value="Fill"/>
    </Style>
</ResourceDictionary>